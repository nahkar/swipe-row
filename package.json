{
  "name": "swipe-row",
  "version": "1.0.1",
  "description": "A highly customizable, iOS-style swipeable row component for React applications.",
  "type": "module",
  "main": "./dist/swipe-row.cjs.js",
  "module": "./dist/swipe-row.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/swipe-row.es.js",
      "require": "./dist/swipe-row.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:demo": "vite build -c vite.demo.config.ts",
    "test": "vitest run",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.9.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "react",
    "framer-motion",
    "swipe",
    "swipeable",
    "list",
    "row",
    "ios",
    "gesture",
    "components"
  ],
  "author": "nahkar",
  "repository": {
    "type": "git",
    "url": "https://github.com/nahkar/swipe-row.git"
  },
  "bugs": {
    "url": "https://github.com/nahkar/swipe-row/issues"
  },
  "homepage": "https://github.com/nahkar/swipe-row#readme",
  "license": "MIT",
  "dependencies": {
    "framer-motion": "^12.34.3"
  }
}
